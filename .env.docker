# Docker Environment Configuration
# Copy this to .env when using Docker

# Database (using Docker volume path)
DATABASE_URL=sqlite:////app/data/workflows.db

# Celery (filesystem broker + SQLite backend)
CELERY_BROKER_URL=filesystem://
CELERY_BROKER_FOLDER=/app/celery_broker
CELERY_BROKER_PROCESSED_FOLDER=/app/celery_broker/processed
CELERY_RESULT_BACKEND=db+sqlite:////app/data/celery_results.db

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=change-this-secret-key-in-production
API_KEY=change-this-api-key-in-production
